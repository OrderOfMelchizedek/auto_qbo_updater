# Flask Configuration
FLASK_APP=src.app
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here
SESSION_TYPE=filesystem

# QuickBooks Online Configuration
QBO_CLIENT_ID=your-qbo-client-id
QBO_CLIENT_SECRET=your-qbo-client-secret
QBO_ENVIRONMENT=sandbox
QBO_REDIRECT_URI=http://localhost:5000/qbo/callback

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-flash

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AWS S3 Configuration (Optional - for async file processing)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=52428800
LOG_DIR=logs
AUDIT_LOG_FILE=logs/audit.log

# Security Settings
CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Development Settings
DEBUG=True
TESTING=False

# Production Settings (Heroku)
# PORT=5000
# GUNICORN_WORKERS=2
# WEB_CONCURRENCY=2

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn